---
permalink: /sitemap.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{% for page in site.pages %}
  <url>
    <loc>{{site.url}}{{site.baseurl}}{{page.url}}</loc>
    <priority>{% if page.url == "/" %}1.0{% else %}0.8{% endif %}</priority>{% if page.url == "/" %}
    <changefreq>always</changefreq>{% endif %}
  </url>
{% endfor %}{% for post in site.posts %}
  <url>
    <loc>{{site.url}}{{site.baseurl}}{{ post.url | remove: 'index.html' }}</loc>
    <lastmod>{{ post.date | date: "%Y-%m-%dT%H:%M:%S+01:00" }}</lastmod>
    <priority>0.6</priority>
  </url>
{% endfor %}
</urlset>
